<Window x:Name="frmMain" x:Class="Neag_Cristina_Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neag_Cristina_Lab2"
        mc:Ignorable="d"
        Title="Virtual Doughnuts Factory" Height="450" Width="800" ResizeMode="NoResize" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid>
        <Label x:Name="lblTitle" Content="Doughnuts - Bake &amp; Sale" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <GroupBox x:Name="gbRaised" Header="Raised" FontWeight="Bold" Margin="225,104,442,234"/>
        <Label x:Name="lblGlazedRaised" Content="Glazed" HorizontalAlignment="Right" Margin="0,0,529,282" VerticalAlignment="Bottom" RenderTransformOrigin="-0.036,0.192"/>
        <TextBox x:Name="txtGlazedRaised" HorizontalAlignment="Right" Margin="0,0,458,282" Text="0" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="38" IsReadOnly="True"/>
        <Label x:Name="lblSugarRaised" Content="Sugar" HorizontalAlignment="Left" Margin="230,166,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSugarRaised" HorizontalAlignment="Left" Margin="304,170,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" IsReadOnly="True"/>
        <GroupBox x:Name="gbFilled" Header="Filled" Margin="440,105,214,206" FontWeight="Bold" />
        <TextBox x:Name="txtChocolateFilled" Margin="80,0,0,0" Text="0" TextWrapping="Wrap" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" Height="19" FontWeight="Normal" HorizontalAlignment="Left" Width="39" />
        <TextBox x:Name="txtLemonFilled" HorizontalAlignment="Left" Margin="528,130,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" IsReadOnly="True"/>
        <Label x:Name="lnlLemonFilled" Content="Lemon" HorizontalAlignment="Left" Margin="442,126,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblChocolateFilled" Content="Chocolate" HorizontalAlignment="Left" Margin="440,161,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVanillaFilled" HorizontalAlignment="Left" Margin="528,201,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" Height="17" IsReadOnly="True"/>
        <Label x:Name="lblVanillaFilled" Content="Vanilla" HorizontalAlignment="Left" Margin="444,192,0,0" VerticalAlignment="Top"/>
        <GroupBox x:Name="gbSale" Header="CurrentSale" Margin="155,228,104,26" FontWeight="Bold"/>
        <Label x:Name="lblQuantity" Content="Quantity" HorizontalAlignment="Left" Margin="184,254,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtQuantity" HorizontalAlignment="Left" Margin="254,258,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="38" Height="22"/>
        <Label x:Name="lblType" Content="Type" HorizontalAlignment="Left" Margin="323,256,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbType" HorizontalAlignment="Left" Margin="363,260,0,0" VerticalAlignment="Top" Width="102"/>
        <Label x:Name="lblPrice" Content="Price" HorizontalAlignment="Left" Margin="505,259,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="546,262,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="43" IsReadOnly="True" Height="20"/>
        <ListBox x:Name="lstSale" Margin="184,290,211,74"/>
        <Label x:Name="lblTotal" Content="Total" HorizontalAlignment="Left" Margin="414,365,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="txtTotal" HorizontalAlignment="Left" Margin="473,367,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" IsReadOnly="True" Height="24"/>
        <Button x:Name="btnAddToSale" Content="Add To Sale" HorizontalAlignment="Left" Margin="604,290,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnRemoveItem" Content="Remove Item" HorizontalAlignment="Left" Margin="604,315,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCheckout" Content="Check Out" HorizontalAlignment="Left" Margin="604,363,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="28" Width="76"/>

        <Menu x:Name="mnuMain" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="131" Margin="0,26,0,0">
            <MenuItem Header="File">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Doughnuts">
                <MenuItem Header="Make">
                    <MenuItem Header="Raised">
                        <MenuItem x:Name="glazedMenuItem" Header="Glazed"/>
                        <MenuItem x:Name="sugarMenuItem" Header="Sugar"/>
                    </MenuItem>
                    <MenuItem Header="Filled"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="txtChocolateFilled1" HorizontalAlignment="Left" Margin="528,167,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" IsReadOnly="True" Height="20"/>

    </Grid>
</Window>
